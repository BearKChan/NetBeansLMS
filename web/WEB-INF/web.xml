<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.niit.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.niit.login.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.niit.register.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInfoServlet</servlet-name>
        <servlet-class>com.niit.user.UserInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInfoChangeServlet</servlet-name>
        <servlet-class>com.niit.user.UserInfoChangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserChangePasswordServlet</servlet-name>
        <servlet-class>com.niit.user.UserChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserSearchServlet</servlet-name>
        <servlet-class>com.niit.user.UserSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.niit.clerk.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FineListServlet</servlet-name>
        <servlet-class>com.niit.clerk.FineListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReturnFineServlet</servlet-name>
        <servlet-class>com.niit.clerk.ReturnFineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInfoServlet</servlet-name>
        <url-pattern>/UserInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInfoChangeServlet</servlet-name>
        <url-pattern>/UserInfoChangeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserChangePasswordServlet</servlet-name>
        <url-pattern>/UserChangePasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserSearchServlet</servlet-name>
        <url-pattern>/UserSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FineListServlet</servlet-name>
        <url-pattern>/FineListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReturnFineServlet</servlet-name>
        <url-pattern>/ReturnFineServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
